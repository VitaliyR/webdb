<div class="row">
    <div class="col s12">
        <ul class="collection with-header">
            <li class="collection-header"><h4>Звіти</h4></li>
          {{#each reports as |report|}}
              <li class="collection-item">
                  <div>
                    {{#link-to "reports.report" report.id}}
                      {{report.name}}
                    {{/link-to}}
                    {{#link-to 'reports.report.remove' report.id classNames='medium mdi-action-highlight-remove secondary-content'}}{{/link-to}}
                    {{#link-to 'reports.report.edit' report.id classNames='medium mdi-image-edit secondary-content'}}{{/link-to}}
                  </div>
              </li>
          {{/each}}
        </ul>
    </div>
    <div class="center">
      {{#link-to 'reports.new' classNames='waves-effect waves-light btn'}}Додати звіт{{/link-to}}
    </div>
</div>

{{outlet}}