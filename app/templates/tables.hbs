<div class="row">
    <div class="col s12">
        <ul class="collection with-header">
            <li class="collection-header"><h4>Таблиці</h4></li>
            {{#each tables as |table|}}
              <li class="collection-item">
                <div>
                  {{#link-to "tables.table" table}}
                    {{table}}
                  {{/link-to}}
                  {{#link-to 'tables.table.remove' row.ID classNames='medium mdi-action-highlight-remove secondary-content'}}{{/link-to}}
                  {{#link-to 'tables.new' row.ID classNames='medium mdi-image-edit secondary-content'}}{{/link-to}}
                </div>
              </li>
            {{/each}}
        </ul>
    </div>
  <div class="center">
    {{#link-to 'tables.new' classNames='waves-effect waves-light btn'}}Додати таблицю{{/link-to}}
  </div>
</div>

{{outlet}}