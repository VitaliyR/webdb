<div class="row">
    <div class="col s12">
        <ul class="collection with-header">
            <li class="collection-header"><h4>Запити</h4></li>
          {{#each queries as |query|}}
              <li class="collection-item">
                  <div>
                    {{#link-to "queries.query" query.id}}
                      {{query.name}}
                    {{/link-to}}
                    {{#link-to 'queries.query.remove' query.id classNames='medium mdi-action-highlight-remove secondary-content'}}{{/link-to}}
                    {{#link-to 'queries.query.edit' query.id classNames='medium mdi-image-edit secondary-content'}}{{/link-to}}
                  </div>
              </li>
          {{/each}}
        </ul>
    </div>
    <div class="center">
      {{#link-to 'queries.new' classNames='waves-effect waves-light btn'}}Додати запит{{/link-to}}
    </div>
</div>

{{outlet}}