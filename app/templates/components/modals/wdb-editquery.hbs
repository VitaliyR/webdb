<div class="modal-content">
    <h4>
      {{#if new}}
          Створити запит
      {{else}}
          Редагувати запит
      {{/if}}
      <h5 class="red-text">{{error}}</h5>
    </h4>
    <div class="row">
        <div class="input-field col s12">
          {{input value=query.id id="query_id" classNames="validate" type="text" placeholder="ID запиту" disabled=true}}
            <label for="query_id" class="active">ID запиту</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
          {{input checked=query.isReport type="checkbox" id="query_isreport" classNames="validate"}}
            <label for="query_isreport" class="active">Звіт</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
          {{input value=query.name id="query_name" classNames="validate" type="text" placeholder="Назва запиту"}}
            <label for="query_name" class="active">Назва запиту</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
          {{textarea value=query.querystring id="query_querystring" classNames="materialize-textarea"}}
            <label for="query_querystring" class="active">Запит</label>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="modal-action waves-effect waves-green btn-flat" {{action 'save'}}>Підтвердити</a>
    <a class="modal-action waves-effect waves-red btn-flat" {{action 'back'}}>Відмінити</a>
</div>
